
@{
    ViewBag.Title = "index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@using WebNhom5.Models.Entitis;
@model PagedList.IPagedList<Product>
@using PagedList;
@using PagedList.Mvc;

<h2>List Products</h2>

    <table id="rounded-corner">
        <thead>
            <tr>
                <th></th>
                <th>id</th>
                <th>name</th>
                <th>OldPrice</th>
                <th>NewPrice</th>
                <th>Brand</th>
                <th>Stype</th>
                <th>Color</th>
                <th>date</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <td colspan="12"></td>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in Model.ToList())
            {
                <tr class="odd">
                    <td></td>
                    <td>@item.id</td>
                    <td>@item.name</td>
                    <td>@item.ole_price</td>
                    <td>@item.new_price</td>
                    <td>@item.Brand.name</td>
                    <td>@item.stype.name</td>
                    <td>@item.Color.name</td>
                    <td>@item.date_make</td>
                    <td><a href="/admin/ProductsAdmin/EditProducts/@item.id"><img src="~/Areas/Admin/Content/images/edit.png" alt="" title="" border="0" /></a></td>
                    <td><a href="/admin/ProductsAdmin/DeleteProducts/@item.id"><img src="~/Areas/Admin/Content/images/trash.gif" alt="" title="" border="0" /></a></td>
                </tr>
            }

        </tbody>
    </table>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))


<div class="form_sub_buttons">
    <a href="/admin/ProductsAdmin/AddProducts" class="button green">Add Product</a>

</div>

