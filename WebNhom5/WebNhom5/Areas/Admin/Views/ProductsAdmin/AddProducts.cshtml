
@{
    ViewBag.Title = "AddProducts";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ul id="tabsmenu" class="tabsmenu">
    <li class="active"><a href="#tab1">Add Product</a></li>


</ul>
    
<div id="tab1" class="tabcontent">
  @*  <h3>Add products</h3>*@
    @*<h3>Tab one title</h3>*@
    <form method="post">
        <div class="form">

            <div class="form_row">
                <label>Id:</label>
                <input type="text" class="form_input" name="id" />
            </div>

            <div class="form_row">
                <label>Name:</label>
                <input type="text" class="form_input" name="name" />
            </div>
            <div class="form_row">
                <label>OldPrice:</label>
                <input type="text" class="form_input" name="ole_price" />
            </div>
            <div class="form_row">
                <label>NewPrice:</label>
                <input type="text" class="form_input" name="new_price" />
            </div>
            <div class="form_row">
                <label>Date:</label>
                <input type="text" class="form_input" name="date_make" />
            </div>

            @{ Html.RenderAction("Combobox", "IndexAdmin");}
            <div class="form_row">
                <label>Infor:</label>
                <textarea class="form_textarea" name="info"></textarea>
            </div>
            <div class="form_row">
                <input type="submit" class="form_submit" value="Submit" />
            </div>
            <div class="clear"></div>
        </div>
    </form>
</div>

