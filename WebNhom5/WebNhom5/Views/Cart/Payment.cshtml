@model List<WebNhom5.Models.Entitis.CartItem>
@using WebNhom5.Models.Entitis;
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="ckeckout">
    <div class="container">
        <div class="ckeck-top heading">
            <h2>PAYMENT</h2>
        </div>


        <div class="ckeckout-top">
            <div class="cart-items">

                <div class="content">
                    <div class="section group">
                        @if (Model.Count > 0)
                        {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <
                                        <td>id</td>
                                        <td>Name</td>
                                        <td>Image</td>
                                        <td>Quantity</td>
                                        <td>Price</td>
                                        <td>Total price</td>
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.product.id</td>
                                            <td>@item.product.name</td>
                                            <td><img src="~/Content/images/@item.product.image" width="100" /></td>
                                            <td><input type="text" class="txtQuantity" data-id="@item.product.id" value="@item.Quantity" /></td>
                                            <td>$ @item.product.new_price.GetValueOrDefault(0).ToString("N0")</td>
                                            <td>$ @((item.product.new_price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>

                                            <td><a href="#" data-id="@item.product.id" class="btn-delete">Delete</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        }

                    </div>
                    <div class="section group">
                        <div class="col-md-6">
                            @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
                            {
                                <div class="form-group">
                                    <label>Name</label>
                                    <input name="shipName" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Phone</label>
                                    <input name="mobile" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Address</label>
                                    <input name="address" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input name="email" class="form-control" />
                                </div>
                                <button type="submit" class="btn">Submit</button>
                            }
                        </div>

                    </div>
                </div>

                </div>
</div>
</div>
</div>